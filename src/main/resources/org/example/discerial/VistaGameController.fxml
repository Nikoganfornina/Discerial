<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="1500" prefHeight="1000"
            stylesheets="@../../../gameStyle.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            id="fondoInicioSesion"
            fx:controller="org.example.discerial.Controladores.VistaPreguntaController">

    <!-- Categoría -->
    <Label fx:id="lblCategoria"
           layoutX="100" layoutY="30"
           style="-fx-font-size: 28px; -fx-font-weight: bold;" />

    <!-- Timer -->
    <Label fx:id="lblTimer"
           layoutX="1300" layoutY="30"
           style="-fx-font-size: 28px; -fx-font-weight: bold;"
           text="00:00" />

    <!-- Contador preguntas -->
    <Label fx:id="lblCountTest"
           layoutX="100" layoutY="80"
           style="-fx-font-size: 48px; -fx-font-weight: bold;"
           text="1/10" />

    <!-- Enunciado grande y en verde -->
    <Label fx:id="lblPregunta"
           layoutX="200" layoutY="150"
           prefWidth="1100"
           wrapText="true"
           style="-fx-font-size: 36px; -fx-text-fill: #00cc44; -fx-alignment: CENTER;"
    />

    <!-- Opciones divididas en 2 columnas y más grandes -->
    <GridPane layoutX="200" layoutY="320"
              hgap="40" vgap="30"
              prefWidth="1100"
              alignment="CENTER">

        <Label fx:id="lblOpcion1"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               prefWidth="520" prefHeight="150"
               wrapText="true"
        />

        <Label fx:id="lblOpcion2"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               GridPane.columnIndex="1" GridPane.rowIndex="0"
               prefWidth="520" prefHeight="150"
               wrapText="true"
        />

        <Label fx:id="lblOpcion3"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               GridPane.columnIndex="0" GridPane.rowIndex="1"
               prefWidth="520" prefHeight="150"
               wrapText="true"
        />

        <Label fx:id="lblOpcion4"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               GridPane.columnIndex="1" GridPane.rowIndex="1"
               prefWidth="520" prefHeight="150"
               wrapText="true"
        />
    </GridPane>

    <!-- Navegación -->
    <HBox fx:id="hboxNav"
          layoutX="600" layoutY="900"
          spacing="40" alignment="CENTER"
          visible="false">
        <Button fx:id="btnAnterior" text="Anterior"
                prefWidth="150" prefHeight="50"
                styleClass="boton-custom"
                onAction="#handleAnterior"/>
        <Button fx:id="btnSiguiente" text="Siguiente"
                prefWidth="150" prefHeight="50"
                styleClass="boton-custom"
                onAction="#handleSiguiente"/>
    </HBox>

</AnchorPane>
