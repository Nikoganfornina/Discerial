    <Label fx:id="lblTimer" layoutX="1300" layoutY="20" style="-fx-font-size: 18px;" />

    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="60">

        <Label fx:id="lblPregunta" style="-fx-font-size: 24px;" wrapText="true" />

