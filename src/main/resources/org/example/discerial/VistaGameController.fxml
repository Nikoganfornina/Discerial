<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.discerial.Controladores.GameController"
            prefWidth="1500" prefHeight="1000"
            stylesheets="@../../../Styles.css">

    <Label fx:id="lblCategoria"
           layoutX="20" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label fx:id="lblTimer"
           layoutX="1300" layoutY="20"
           style="-fx-font-size: 18px;"/>

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="60" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="80">

        <Label fx:id="lblPregunta" wrapText="true"
               style="-fx-font-size: 24px;"/>

        <HBox alignment="CENTER">
            <ImageView fx:id="imgPregunta"
                       fitHeight="200" fitWidth="300" preserveRatio="true"/>
        </HBox>

        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="lblOpcion1" onMouseClicked="#handleOpcion"
                   style="-fx-padding: 10; -fx-border-width: 2;"/>
            <Label fx:id="lblOpcion2" onMouseClicked="#handleOpcion"
                   style="-fx-padding: 10; -fx-border-width: 2;"/>
            <Label fx:id="lblOpcion3" onMouseClicked="#handleOpcion"
                   style="-fx-padding: 10; -fx-border-width: 2;"/>
            <Label fx:id="lblOpcion4" onMouseClicked="#handleOpcion"
                   style="-fx-padding: 10; -fx-border-width: 2;"/>
        </VBox>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnAnterior" text="Anterior"
                    prefWidth="150" prefHeight="50"
                    onAction="#handleAnterior"/>
            <Button fx:id="btnSiguiente" text="Siguiente"
                    prefWidth="150" prefHeight="50"
                    onAction="#handleSiguiente"/>
        </HBox>
    </VBox>

    <Button fx:id="btnVolver" text="Volver"
            layoutX="1286.0" layoutY="885.0"
            prefHeight="78.0" prefWidth="174.0"
            onAction="#handleVolver"/>
</AnchorPane>
