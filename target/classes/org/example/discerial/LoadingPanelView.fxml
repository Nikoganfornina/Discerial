<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.discerial.Controladores.LoadingPanelController"
            prefWidth="1500.0" prefHeight="1000.0"
            styleClass="fondopagina"
            stylesheets="@../../../LoadingStyle.css">

    <VBox alignment="TOP_CENTER" spacing="40.0"
          prefWidth="1500.0"
          AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

        <StackPane alignment="CENTER">
            <ImageView fx:id="imagenCuriosa"
                       fitWidth="1000.0" fitHeight="500.0"
                       preserveRatio="true"
                       smooth="true"/>
        </StackPane>

        <Label fx:id="sabiasQueLabel"
               text="¿SABÍAS QUE...?"
               styleClass="titulo-label"
                textAlignment="LEFT"
        />

        <Label fx:id="curiosidadLabel"
               wrapText="true"
               maxWidth="1000.0"
               textAlignment="LEFT"
               styleClass="curiosidad-label"/>
    </VBox>

    <ProgressBar fx:id="progressBar"
                 prefWidth="1000.0"
                 prefHeight="40.0"
                 AnchorPane.bottomAnchor="50.0"
                 AnchorPane.leftAnchor="250.0"
                 styleClass="progress-bar"/>
</AnchorPane>
