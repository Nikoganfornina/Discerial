<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="1500" prefHeight="1000"
            stylesheets="@../../../gameStyle.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane"
            id="fondoInicioSesion"
            fx:controller="org.example.discerial.Controladores.VistaPreguntaController">

    <!-- Categoría -->
    <Label fx:id="lblCategoria"
           layoutX="20" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Timer -->
    <Label fx:id="lblTimer"
           layoutX="1300" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="00:00" />

    <!-- Imagen centrada con bordes redondeados -->
    <ImageView fx:id="imgPregunta"
               layoutX="400" layoutY="150"
               fitWidth="700" fitHeight="350"
               preserveRatio="true"/>

    <!-- Enunciado -->
    <Label fx:id="lblPregunta"
           layoutX="200" layoutY="520"
           prefWidth="1100"
           wrapText="true"
           style="-fx-font-size: 24px; -fx-alignment: CENTER;" />

    <!-- Opciones -->
    <VBox layoutX="200" layoutY="600"
          spacing="20" alignment="CENTER"
          prefWidth="1100">
        <Label fx:id="lblOpcion1"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               prefWidth="1100"/>
        <Label fx:id="lblOpcion2"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               prefWidth="1100"/>
        <Label fx:id="lblOpcion3"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               prefWidth="1100"/>
        <Label fx:id="lblOpcion4"
               onMouseClicked="#handleOpcion"
               styleClass="opcion-custom"
               prefWidth="1100"/>
    </VBox>

    <!-- Navegación (oculto inicialmente) -->
    <HBox fx:id="hboxNav"
          layoutX="600" layoutY="900"
          spacing="40" alignment="CENTER"
          visible="false">
        <Button fx:id="btnAnterior" text="Anterior"
                prefWidth="150" prefHeight="50"
                styleClass="boton-custom"
                onAction="#handleAnterior"/>
        <Button fx:id="btnSiguiente" text="Siguiente"
                prefWidth="150" prefHeight="50"
                styleClass="boton-custom"
                onAction="#handleSiguiente"/>
    </HBox>

</AnchorPane>
