<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.discerial.Controladores.VistaPreguntaController"
            prefWidth="1500" prefHeight="1000"
            stylesheets="@../../../Styles.css">

    <!-- Categoría arriba a la izquierda -->
    <Label fx:id="lblCategoria"
           layoutX="20" layoutY="20"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>


    <!-- Contenedor principal centrado -->
    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">


        <!-- Texto de la pregunta -->
        <Label fx:id="lblPregunta" wrapText="true"
               style="-fx-font-size: 24px;"/>

        <!-- Imagen centrada -->
        <HBox alignment="CENTER">
            <ImageView fx:id="imgPregunta" fitHeight="200" fitWidth="300" preserveRatio="true"/>
        </HBox>

        <!-- Opciones de respuesta -->
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="lblOpcion1" style="-fx-padding: 10; -fx-border-width: 2;"/>
            <Label fx:id="lblOpcion2" style="-fx-padding: 10; -fx-border-width: 2;"/>
            <Label fx:id="lblOpcion3" style="-fx-padding: 10; -fx-border-width: 2;"/>
            <Label fx:id="lblOpcion4" style="-fx-padding: 10; -fx-border-width: 2;"/>
        </VBox>

        <!-- Navegación -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnAnterior" text="Anterior"
                    prefWidth="150" prefHeight="50"
                    onAction="#handleAnterior"/>
            <Button fx:id="btnSiguiente" text="Siguiente"
                    prefWidth="150" prefHeight="50"
                    onAction="#handleSiguiente"/>
        </HBox>


    </VBox>

    <!-- Botón Volver abajo a la derecha -->
    <Button fx:id="btnVolver" text="Volver"
            layoutX="1286.0" layoutY="885.0"
            prefHeight="78.0" prefWidth="174.0"
            onAction="#handleVolver"/>

</AnchorPane>
