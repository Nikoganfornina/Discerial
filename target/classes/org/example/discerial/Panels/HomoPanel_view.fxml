        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label id="SubstitulosStyle" prefWidth="200.0" style="-fx-font-size: 18px;" text="Categoría Favorita:"/>
            <TextField id="textFieldSesion" fx:id="usuarioCategoriaFavorita" prefWidth="250.0" text="Historia"/>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label id="SubstitulosStyle" prefWidth="200.0" style="-fx-font-size: 18px;" text="Horas en juego:"/>
            <Label id="textFieldSesion" fx:id="lblTiempoJugado" prefWidth="250.0" text="10"/>
        </HBox>
    </VBox>

    <HBox alignment="CENTER" layoutX="44.0" layoutY="738.0" spacing="20">
        <VBox alignment="CENTER">
            <ImageView fx:id="premiohistoria" fitHeight="200.0" fitWidth="200.0"/>
            <Label text="Historia" style="-fx-text-fill: #4c5b3d; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox.margin>
                <Insets top="0" right="20" bottom="0" left="20"/>
            </HBox.margin>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fx:id="premiobiologia" fitHeight="200.0" fitWidth="200.0"/>
            <Label text="Biología" style="-fx-text-fill: #4c5b3d; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox.margin>
                <Insets top="0" right="20" bottom="0" left="20"/>
            </HBox.margin>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fx:id="premiofilosofia" fitHeight="200.0" fitWidth="200.0"/>
            <Label text="Filosofía" style="-fx-text-fill: #4c5b3d; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox.margin>
                <Insets top="0" right="20" bottom="0" left="20"/>
            </HBox.margin>
        </VBox>
        <VBox alignment="CENTER">
            <ImageView fx:id="premioliteratura" fitHeight="200.0" fitWidth="200.0"/>
            <Label text="Literatura" style="-fx-text-fill: #4c5b3d; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <HBox.margin>
                <Insets top="0" right="20" bottom="0" left="20"/>
            </HBox.margin>
        </VBox>
    </HBox>



    <Button id="botonPersonalizado" fx:id="btnEditar" layoutX="719.0" layoutY="588.0" onAction="#entrarModoEdicion"
            prefHeight="80.0" prefWidth="193.0" text="Editar" visible="true"/>
    <Button id="botonPersonalizado" fx:id="btnGuardar" layoutX="719.0" layoutY="588.0" onAction="#guardarCambios"
            prefHeight="80.0" prefWidth="193.0" text="Guardar" visible="false"/>

    <AnchorPane fx:id="contenedorImagenes" layoutX="21.0" layoutY="550.0" prefHeight="400" prefWidth="600"
                visible="false"/>

    <Button id="botonPersonalizado" fx:id="btnIconosPerfil" layoutX="88.0" layoutY="588.0" onAction="#visualizarImagen"
            prefHeight="80.0" prefWidth="264.0" text="Cambiar Foto Perfil" visible="false"/>


</AnchorPane>
